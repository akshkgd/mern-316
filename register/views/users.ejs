<body>
   <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-7">
                <h1 class="fw-bold fs-2">Registered Users</h1>
                <table class="table border mt-5">
                    <thead>
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                        
                        <!-- <% results.map((result)=>{ %>

                      <tr>
                        <th scope="row"></th>
